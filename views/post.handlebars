<div>
  <h2 class="headerColor">{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <br />
  <div>
    <form class="form new-comment-form">
      <input type="hidden" id="post_id" name="post_id" value={{id}} />
      <div class="form-group">
        <textarea
          class="form-input"
          id="comment-desc"
          name="comment-desc"
        ></textarea>
      </div>
      <div class="form-group">
        <button class="btn">Comment</button>
      </div>
    </form>
  </div>
  <br />
  {{#if comments.length}}
    <div class="col-md-6 comment-list">
      {{#each comments as |comment|}}
        <div class="row mb-2">
          <p>{{comment.description}}
            |
            {{user.name}}
            on
            {{format_date date_created}}</p>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="/js/comment.js"></script>